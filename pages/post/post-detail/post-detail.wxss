.container{
    display: flex;
    flex-direction: column;
}

.head-image{
    width: 100%;
    height: 460rpx;
}

.audio-icon{
    width: 51px;
    height: 55px;
    position: absolute;
    top: 80px;
    left: 50%;
    margin-left: -25px;
    opacity: 0.7;
}

.author-date{
    display: flex;
    flex-direction: row; 
    align-items: center;
    padding: 20rpx;
}

.author-avatar{
    width: 90rpx;
    height: 90rpx;
    /* vertical-align: center; */
    margin-left: 20rpx;
}

.author-name{
    color: #666666;
    font-size: 32rpx;
    margin-left: 10px;
    /* vertical-align: center; */
    font-weight: 500;
    line-height: 90rpx;
}

.fby{
    color: #666666;
    margin-left: 10px;
    /* vertical-align: center; */
    font-size: 28rpx;
    line-height: 90rpx;
}

.time{
    color: #666666;
    margin-left: 10px;
    /* vertical-align: center; */
    font-size: 30rpx;
    line-height: 90rpx;
}

.title{
    font-weight: bold;
    font-size: 40rpx;
    color: #4B556C;
    margin-left: 40rpx;
    margin-bottom: 30rpx;
}

.tool .tool-image{
    float: right;
}


.tool-image image{
    width: 94rpx;
    height: 94rpx;
}

.tool-image image:nth-child(2){
    margin-right: 15px;
    margin-left: 15px;
}

.tool .line{
    height: 0px;
    /* width: 100%; */
    /* padding-top: 5px; */
    border-top: 1px solid #ccc;
    position: relative;
    top: 40rpx;
    margin: 0 40rpx;
    z-index: -1;
}

.detail{
    color: #ccc;
    margin: 20rpx 40rpx;
    font-size: 30rpx;
    letter-spacing: 2px;
}