/* 模板的样式文件 */
.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 10px;
    margin-bottom: 20px;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    padding-bottom: 10px;
}

.post-author-date{
    padding: 20rpx;
    display: flex;
    flex-direction: row;
}

.post-author{
    width: 100rpx;
    height: 100rpx;
    vertical-align: center;
}

.post-date{
    margin-left: 20rpx;
    font-size: 30rpx;
    font-weight: 600;
    vertical-align: center;
    line-height: 100rpx;
    color: #666666
}

.post-title{
    margin-left: 20rpx;
    line-height: 55rpx;
    font-size: 45rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.post-image{
    width: 100%;
    height: 500rpx;
}

.post-content{
    margin: 30rpx;
    letter-spacing: 2px;
    font-size: 14px;
    color: #666666;
}

.post-like{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 30rpx;
}

.post-like-image{
    width: 15px;
    height: 15px;
    vertical-align: center;
}

.post-like-number{
    font-size: 12px;
    color: #A0A0A0;
    vertical-align: center;
    margin: 0 5px;
}